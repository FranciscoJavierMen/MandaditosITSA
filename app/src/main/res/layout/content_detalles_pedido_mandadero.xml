<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.exemple.administrador.mandaditostec.mandadero.PedidoMandadero.DetallesPedidoMandadero"
    tools:showIn="@layout/detalles_pedido_mandadero">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardFormularioPedido"
            android:layout_marginTop="20dp"
            style="@style/cardPedidos"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:orientation="vertical">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view1"
                    style="@style/viewStyle"/>

                <TextView
                    style="@style/label"
                    android:text="@string/descripcionPedido"
                    app:layout_anchor="@+id/view1"
                    app:layout_anchorGravity="center" />

            </android.support.design.widget.CoordinatorLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#D3F5EB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp">

                            <android.support.design.widget.FloatingActionButton
                                android:src="@drawable/ic_person_two"
                                android:tint="@color/blanco"
                                app:backgroundTint="@color/azulfondo"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1895CA"
                                android:layout_marginStart="20dp"
                                android:text="1 minute ago" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/descripcion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:layout_marginStart="70dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="start"
                            android:text="@string/large_text" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view2"
                        style="@style/viewStyle"/>

                    <TextView
                        style="@style/label"
                        android:text="DirecciÃ³n"
                        app:layout_anchor="@+id/view2"
                        app:layout_anchorGravity="center" />

                </android.support.design.widget.CoordinatorLayout>


                <android.support.v7.widget.CardView
                    android:id="@+id/CardDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    app:cardBackgroundColor="#2699FB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/Lindireccion"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/direccionmandado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Colonia"
                                android:textSize="20sp" />



                            <TextView
                                android:id="@+id/distancia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Distancia "
                                android:textSize="20sp" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="0dp">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/verDireccion"
                                android:focusable="true"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@color/azulObscuro"
                                app:backgroundTint="@color/blanco"
                                app:layout_anchor="@+id/Lindireccion"
                                app:layout_anchorGravity="right|center"
                                app:rippleColor="@color/azul"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                        </LinearLayout>

                        </LinearLayout>




                </android.support.v7.widget.CardView>

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view3"
                        style="@style/viewStyle"/>

                    <TextView
                        style="@style/label"
                        android:text="contacto"
                        app:layout_anchor="@+id/view3"
                        app:layout_anchorGravity="center" />

                </android.support.design.widget.CoordinatorLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F1F9FF">

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.FloatingActionButton
                            android:src="@drawable/ic_person"
                            android:tint="@color/blanco"
                            app:backgroundTint="@color/azulfondo"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="60dp">

                            <TextView
                                android:id="@+id/nombre_cliente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#2699FB"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="John Doe"
                                />

                            <TextView
                                android:id="@+id/direccion_cliente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#2699FB"
                                android:textSize="14sp"
                                android:text="San Francisco, CA"
                                />
                        </LinearLayout>
                    </android.support.design.widget.CoordinatorLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F1F9FF">

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_mensaje"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="60dp">

                            <TextView
                                android:id="@+id/numero_cliente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#2699FB"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="@string/nuevo_chat"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#2699FB"
                                android:textSize="14sp"
                                android:text="@string/chat"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center_vertical"

                            android:src="@drawable/flechaderecha"
                            android:tint="#2699FB" />
                    </android.support.design.widget.CoordinatorLayout>

                </android.support.v7.widget.CardView>

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view4"
                        style="@style/viewStyle"/>

                    <TextView
                        style="@style/label"
                        android:text="Aceptar o rechazar pedido"
                        app:layout_anchor="@+id/view4"
                        app:layout_anchorGravity="center" />

                </android.support.design.widget.CoordinatorLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/aceptarpedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        android:backgroundTint="#00DB58"
                        android:tint="@color/blanco"
                        app:srcCompat="@drawable/ic_done" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/cancelarpedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        android:backgroundTint="#F94059"
                        android:tint="@color/blanco"
                        app:srcCompat="@drawable/ic_close_black_24dp" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

