<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrador.mandaditostec">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.Login.Acceder"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".Cliente.BottomNavigation" />
        <activity
            android:name=".Cliente.Mapa.Maps"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".Cliente.Pedido.MapaDestino"
            android:label="@string/title_activity_mapa_destino" />
        <activity
            android:name=".Cliente.Pedido.EstadoPedido.TabPedidos"
            android:label="@string/title_activity_tab_pedidos"
            android:theme="@style/AppTheme" />
        <activity android:name=".Cliente.Pedido.DetallesPedido" />
        <!--
            <activity
            android:name="com.Login.Acceder"
            android:label="@string/title_activity_acceder"
            android:theme="@style/AppTheme" />
        -->
        <activity
            android:name="com.Login.RegistroCliente"
            android:label="@string/title_activity_registro_cliente"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Login.RegistroMandadero"
            android:label="@string/title_activity_registro_mandadero"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Cliente.Pedido.ListaMandaderos"
            android:label="@string/title_activity_lista_mandaderos"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>